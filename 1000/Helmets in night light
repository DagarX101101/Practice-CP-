
#include <bits/stdc++.h>
using namespace std;

void solve()
{
    int n;
    cin >> n;
    int k;
    cin >> k;
    vector<int> vec1;
    vector<int> vec2;
    // map<int, int> mpp;
    // vector<int> vec3;
    // int mini = 0;
    priority_queue<pair<int, int>, vector<pair<int, int>>, greater<pair<int, int>>> pq;
    for (int i = 0; i < n; i++)
    {
        int a;
        cin >> a;
        vec1.push_back(a);
    }
    for (int i = 0; i < n; i++)
    {
        int a;
        cin >> a;
        vec2.push_back(a);
        if (a < k)
        {
            // mpp[a] = vec1[i];
            // vec3.push_back(a);
            pq.push({a, vec1[i]});
        }
    }
    // sort(vec3.begin(), vec3.end());
    long long sum = k;
    int x = 1;
    while (!pq.empty() && x < n)
    {
        auto it = pq.top();
        pq.pop();
        int a = it.first;
        int b = it.second;
        while (b-- && x < n)
        {
            sum += a;
            x++;
        }
    }
    sum += 1LL*(n - x) * k;
    cout << sum << endl;
}
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
        solve();

    return 0;
}
