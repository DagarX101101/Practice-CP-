#include <bits/stdc++.h>
using namespace std;

void solve()
{
    string s;
    cin >> s;
    int n = s.length();
    int zeros = 0;
    int ones = 0;
    for (int i = 0; i < n; i++)
    {
        if (s[i] == '1')
        {
            ones++;
        }
        else
        {
            zeros++;
        }
    }
    string t;
    for (int i = 0; i < n; i++)
    {
        if (s[i] == '1')
        {
            if (zeros > 0)
            {
                t += '0';
                zeros--;
            }
            else
            {
                break;
            }
        }
        else
        {
            if (ones > 0)
            {
                t += '0';
                ones--;
            }
            else
            {
                break;
            }
        }
    }
    cout << n - t.length() << endl;
}
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
        solve();

    return 0;
}
