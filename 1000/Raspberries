#include <bits/stdc++.h>
using namespace std;

void solve()
{
    int n;
    cin >> n;
    int k;
    cin >> k;
    int mini = INT_MAX;
    vector<int> vec;
    for (int i = 0; i < n; i++)
    {
        int a;
        cin >> a;
        vec.push_back(a);
        if (a % k == 0)
        {
            mini = 0;
        }
        a = k - a % k;
        mini = min(a, mini);
    }
    if (k == 4)
    {
        int odd = 0;
        int even = 0;
        int flag = 0;
        for (int i = 0; i < n; i++)
        {
            if (vec[i] % 2 == 0)
            {
                even++;
            }
            else
            {
                odd++;
            }
            if (vec[i] % 4 == 0)
            {
                flag = 1;
            }
        }
        if (even >= 2 || flag == 1)
        {
            mini = 0;
        }
        if (even == 1 && odd >= 1)
        {
            mini = min(mini, 1);
        }
        if (even == 0 && odd >= 2)
        {
            mini = min(mini, 2);
        }
    }
    cout << mini << endl;
}
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
        solve();

    return 0;
}

